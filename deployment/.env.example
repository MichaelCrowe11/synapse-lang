# Quantum Trinity Playground - Environment Variables
# Copy this file to .env and fill in your values

# Application Settings
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
DEBUG=False
TESTING=False

# Database Configuration
DATABASE_URL=postgresql://synapse_user:password@db:5432/synapse_playground
DB_USER=synapse_user
DB_PASSWORD=your-secure-password
POSTGRES_DB=synapse_playground

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your-redis-password

# AI Integration Keys
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# AWS/Cloud Storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=synapse-lang-storage

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
FROM_EMAIL=noreply@synapse-lang.com

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GRAFANA_PASSWORD=your-grafana-admin-password
PROMETHEUS_BEARER_TOKEN=your-prometheus-token

# Security
JWT_SECRET_KEY=your-jwt-secret-key
CORS_ORIGINS=https://synapse-lang.com,https://www.synapse-lang.com
ALLOWED_HOSTS=synapse-lang.com,www.synapse-lang.com,localhost

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# GitHub Integration (for sharing)
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Cloudflare (for CDN and protection)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# Quantum Cloud Providers (optional)
IBM_QUANTUM_TOKEN=your-ibm-quantum-token
AWS_BRAKET_ACCESS_KEY=your-aws-braket-key
AZURE_QUANTUM_SUBSCRIPTION=your-azure-quantum-sub

# Analytics
GOOGLE_ANALYTICS_ID=G-YOUR-GA-ID
MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_COLLABORATION=false
ENABLE_CLOUD_EXECUTION=false
ENABLE_PREMIUM_FEATURES=false

# Resource Limits
MAX_EXECUTION_TIME=30000  # milliseconds
MAX_OUTPUT_SIZE=1048576    # bytes (1MB)
MAX_CONCURRENT_EXECUTIONS=10
MAX_STORAGE_PER_USER=104857600  # bytes (100MB)