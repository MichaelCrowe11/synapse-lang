# Synapse Cloud Platform Environment Configuration

# Security
JWT_SECRET=your-jwt-secret-key-change-in-production
SECRET_KEY=your-api-secret-key-change-in-production

# Database Configuration
POSTGRES_USER=synapse
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=synapse
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# MongoDB Configuration (User Service)
MONGODB_URL=mongodb://mongo:27017/users
MONGODB_USER=synapse
MONGODB_PASSWORD=your-mongodb-password

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
RABBITMQ_USER=synapse
RABBITMQ_PASSWORD=your-rabbitmq-password

# AWS Configuration (Package Storage)
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key
S3_BUCKET=synapse-packages
AWS_REGION=us-west-2

# Stripe Configuration (Billing)
STRIPE_API_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Monitoring Configuration
GRAFANA_PASSWORD=your-grafana-password
PROMETHEUS_RETENTION=30d

# Platform Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
MAX_QUBITS=30
GPU_ENABLED=true

# External Services
SENDGRID_API_KEY=your-sendgrid-api-key
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Feature Flags
ENABLE_HARDWARE_BACKENDS=false
ENABLE_PREMIUM_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_MARKETPLACE=true

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/synapse.crt
SSL_KEY_PATH=/etc/ssl/private/synapse.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance Tuning
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
CONNECTION_POOL_SIZE=20
QUEUE_MAX_SIZE=10000