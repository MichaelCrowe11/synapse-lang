FROM python:3.10-slim

WORKDIR /app

# Install minimal requirements
RUN pip install --no-cache-dir Flask gunicorn

# Copy minimal app
COPY app_minimal.py .

# Set environment
ENV PORT=8080

# Expose port
EXPOSE 8080

# Run with gunicorn
CMD ["gunicorn", "--bind", "0.0.0.0:8080", "--timeout", "120", "app_minimal:app"]