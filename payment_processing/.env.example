# Stripe API Configuration
# Copy this file to .env and fill in your actual Stripe keys

# Stripe API Keys (get from https://dashboard.stripe.com/apikeys)
STRIPE_API_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Webhook Secret (get from https://dashboard.stripe.com/webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Environment
STRIPE_ENV=test  # Use 'live' for production

# Webhook Server Configuration
WEBHOOK_PORT=8000
WEBHOOK_HOST=localhost

# Pricing Configuration (Stripe Price IDs)
PRICE_STARTER_MONTHLY=price_1234567890abcdef
PRICE_STARTER_YEARLY=price_1234567890abcdeg
PRICE_PRO_MONTHLY=price_1234567890abcdeh
PRICE_PRO_YEARLY=price_1234567890abcdei
PRICE_ENTERPRISE_MONTHLY=price_1234567890abcdej
PRICE_ENTERPRISE_YEARLY=price_1234567890abcdek
PRICE_QUANTUM_MONTHLY=price_1234567890abcdel
PRICE_QUANTUM_YEARLY=price_1234567890abcdem

# Platform Configuration
PLATFORM_URL=https://synapse-platform.com
SUCCESS_URL=https://synapse-platform.com/payment/success
CANCEL_URL=https://synapse-platform.com/payment/cancel

# Currency
DEFAULT_CURRENCY=usd